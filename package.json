{
  "name": "ath-dashboard",
  "version": "1.0.0",
  "description": "Ath Dashboard Desktop Application",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --prod",
    "test": "cross-env NODE_OPTIONS=--openssl-legacy-provider ng test --watch=false --browsers=ChromeHeadlessNoSandbox",
    "test:puppeteer": "node ./scripts/run-with-puppeteer.js",
    "test:ci": "cross-env CI=true node ./scripts/run-with-puppeteer.js",
    "test:local": "cross-env NODE_OPTIONS=--openssl-legacy-provider ng test",
    "lint": "ng lint",
    "electron": "electron .",
    "dist:win": "npm run build:prod && electron-builder --win --x64 --publish never",
    "dist:mac": "npm run build:prod && electron-builder --mac --x64 --publish never"
  },
  "build": {
    "appId": "com.yourcompany.ath-dashboard",
    "productName": "Ath Dashboard",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/favicon.ico"
    }
  },
  "dependencies": {
    "@angular/animations": "^21.1.4",
    "@angular/common": "^21.1.4",
    "@angular/compiler": "^21.1.4",
    "@angular/core": "^21.1.4",
    "@angular/forms": "^21.1.4",
    "@angular/platform-browser": "^21.1.4",
    "@angular/platform-browser-dynamic": "^21.1.4",
    "@angular/router": "^21.1.4",
    "core-js": "^2.5.4",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler-cli": "^21.1.4",
    "@angular/language-service": "~7.2.0",
    "@types/jasmine": "^2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^0.0.28",
    "cross-env": "^7.0.3",
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "puppeteer": "^24.37.2",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2"
  },
  "author": "Your Company",
  "license": "MIT"
}
