{
  "name": "ath-dashboard",
  "version": "1.0.0",
  "description": "Desktop Application",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "test": "ng test --watch=false --browsers=ChromeHeadless",
    "lint": "ng lint",
    "electron": "electron .",
    "dist:win": "npm run build:prod && electron-builder --win --x64 --publish never",
    "dist:mac": "npm run build:prod && electron-builder --mac --x64 --publish never",
    "dist:linux": "npm run build:prod && electron-builder --linux --publish never"
  },
  "build": {
    "appId": "com.yourcompany.ath-dashboard",
    "productName": "ath Dashboard",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/favicon.ico"
    }
  },
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0"
  },
  "author": "Your Company",
  "license": "MIT"
}